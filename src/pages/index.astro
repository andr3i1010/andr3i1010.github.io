// Get the user's preferred language from the Accept-Language header
const acceptLanguage = Astro.request.headers.get('accept-language') || '';

// Check if Dutch is one of the preferred languages
const isDutch = acceptLanguage.toLowerCase().includes('nl');

// Determine the redirect path based on locale
const redirectPath = isDutch ? '/nl' : '/en';

// Return a redirect response
return Astro.redirect(redirectPath);
